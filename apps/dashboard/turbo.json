{
  "$schema": "https://turbo.build/schema.json",
  "extends": [
    "//"
  ],
  "pipeline": {
    "build": {
      "env": [
        "NODE_ENV",
        "DATABASE_URL",
        "DATABASE_AUTH_TOKEN",
        "GITHUB_CLIENT_ID",
        "GITHUB_CLIENT_SECRET",
        "GOOGLE_CLIENT_ID",
        "GOOGLE_CLIENT_SECRET",
        "GOOGLE_REDIRECT_URI"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**"
      ]
    }
  }
}
